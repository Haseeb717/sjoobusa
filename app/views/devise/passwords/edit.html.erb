<section class="page-content">
  <div class="container">

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="box">
          <h3><%= t('.change_your_password') %></h3>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password do %>
                <%= t('.new_password') %>
                <% if @minimum_password_length %>
                  <em>(MÃ­nimo <%= @minimum_password_length %> caracteres)</em><br />
                <% end %>
              <% end %>
              <%= f.password_field :password, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <div class="clearfix">
                <%= f.label :password_confirmation, class: 'pull-left' do %>
                  <%= t('.confirm_new_password') %>
                <% end %>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>

            <%= f.submit t('.change_my_password'), class: 'btn btn-primary btn-inline' %>&nbsp; &nbsp; &nbsp;

            <br /><br />
            <div class="clearfix">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</section>