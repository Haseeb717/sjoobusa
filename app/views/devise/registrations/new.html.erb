<section class="page-content">
  <div class="container">

    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <% unless alert.blank? %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-times"></i></button>
            <strong><%= alert %></strong>
          </div>
        <% end %>

        <% unless notice.blank? %>
          <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-times"></i></button>

            <% if notice.is_a?(Array) %>
              <ul>
                <% notice.each do |msg| %>
                  <li>
                    <strong><%= msg %></strong>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <ul>
                <li>
                  <strong><%= notice %></strong>
                </li>
              </ul>
            <% end %>
          </div>
        <% end %>

        <div class="spacer-lg visible-sm visible-xs"></div>

        <div class="box">
          <h3>Empresa</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
            <div class="form-group">
              <%= f.label :email do %>
                E-mail <span class="required">*</span>
              <% end %>
              <%= f.text_field :email, autofocus: true, class: 'form-control' %>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :password do %>
                    Senha <span class="required">*</span>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :password_confirmation do %>
                    Confirmar Senha <span class="required">*</span>
                  <% end %>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cnpj do %>
                CNPJ <span class="required">*</span>
              <% end %>
              <%= f.text_field :cnpj, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :name do %>
                Razão Social <span class="required">*</span>
              <% end %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :trade do %>
                Nome Fantasia <span class="required">*</span>
              <% end %>
              <%= f.text_field :trade, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :state_identification do %>
                Inscrição Estadual
              <% end %>
              <%= f.text_field :state_identification, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :area do %>
                Ramo
              <% end %>
              <%= f.text_field :area, class: 'form-control' %>
            </div>

            <%= f.submit "Cadastrar", class: 'btn btn-primary' %>

            <br /><br />
            <div class="clearfix">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</section>