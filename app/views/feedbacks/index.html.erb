<p id="notice"><%= notice %></p>

<h1>Listing Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Employee</th>
      <th>Service type</th>
      <th>Role</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Commitment score</th>
      <th>Excellence score</th>
      <th>Productivity score</th>
      <th>Customer service score</th>
      <th>Leadership score</th>
      <th>Proactivity score</th>
      <th>Teamwork score</th>
      <th>Flexibility score</th>
      <th>Contribution to sales</th>
      <th>Unjustified absences</th>
      <th>Warnings</th>
      <th>Late for work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.company %></td>
        <td><%= feedback.employee %></td>
        <td><%= feedback.service_type %></td>
        <td><%= feedback.role %></td>
        <td><%= feedback.start_at %></td>
        <td><%= feedback.end_at %></td>
        <td><%= feedback.commitment_score %></td>
        <td><%= feedback.excellence_score %></td>
        <td><%= feedback.productivity_score %></td>
        <td><%= feedback.customer_service_score %></td>
        <td><%= feedback.leadership_score %></td>
        <td><%= feedback.proactivity_score %></td>
        <td><%= feedback.teamwork_score %></td>
        <td><%= feedback.flexibility_score %></td>
        <td><%= feedback.contribution_to_sales %></td>
        <td><%= feedback.unjustified_absences %></td>
        <td><%= feedback.warnings %></td>
        <td><%= feedback.late_for_work %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

