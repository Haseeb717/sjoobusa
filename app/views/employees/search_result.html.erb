<section class="page-content">
  <div class="container">

    <% if @employees.count == 0 %>
      <h3>Ops! Nenhum profissional encontrado</h3>
    <% else %>
      <h3>Profissional encontrado</h3>
    <% end %>

    <div class="spacer"></div>

    <% if @employees.count == 0 %>
      <div class="row">
        <div class="col-md-12">
            <p>
              Para cadastrar um profissional em nosso banco de dados, <%= link_to 'clique aqui', new_employee_path %>.
            </p>
        </div>
      </div>
    <% else %>
      <div class="job_listings">
        <ul class="job_listings">
          <% @employees.each do |employee| %>
            <li class="job_listing">
              <%= link_to employee do %>
                <div class="job_img">
                  <%= image_tag "samples/#{employee.photo}", alt: employee.name, class: 'company_logo' %>
                </div>
                <div class="position" style="width: 40%;">
                  <h3><%= employee.name %></h3>
                  <div class="company">
                    <strong><%= employee.cpf %></strong>
                  </div>
                </div>
                <div class="location">
                  <i class="fa fa-envelope"></i> <%= employee.email %>
                </div>
                <div class="rating">
                  <div class="rating-stars">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-half-o"></i>
                  </div>
                  <div class="reviews-num"><%= employee.feedbacks.count %> Avaliações</div>
                </div>
                <ul class="meta">
                  <li class="date">
                    <%= distance_of_time_in_words(Time.now, employee.created_at) %>
                  </li>
                </ul>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

  </div>
</section>