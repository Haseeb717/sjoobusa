<section class="page-content">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <% if @can_add_feedback %>
          <fieldset>
            <div class="field account-sign-in">
              <p>
                <%= link_to new_employee_feedback_path(@employee.id), class: 'btn btn-primary btn-sm' do %>
                  <i class="fa fa-plus"></i> Avaliar profissional
                <% end %>
              </p>
            </div>
          </fieldset>
        <% else %>
          <p>Você já avaliou esse candidato!</p>
        <% end %>
      </div>
    </div>

    <div class="spacer"></div>

    <div class="row">
      <div class="col-md-2">
        <figure class="alignnone">
          <% if @employee.photo %>
            <%= image_tag "samples/#{@employee.photo}", alt: @employee.name %>
          <% else %>
            <%= image_tag "samples/person-shadow.jpg", alt: @employee.name %>
          <% end %>
        </figure>
      </div>
      <div class="col-md-10">
        <div class="spacer visible-sm visible-xs"></div>
        <div class="team-single-head">
          <h2><%= @employee.name %></h2>
        </div>
        <p>Email: <%= @employee.email %></p>
        <p>CPF: <%= @employee.cpf %></p>
        <p>Tel: <%= @employee.phone %></p>
      </div>
    </div>

    <% if @employee.feedbacks.count > 0 %>
      <hr class="lg">

      <div class="row">

        <div class="col-md-12">
          <h3>
            Pontuação (média das avaliações)
            <% if @employee.feedbacks.count == 1 %>
              <small>(<%= @employee.feedbacks.count %> empresa já avaliou esse profissional)</small>
            <% else %>
              <small>(<%= @employee.feedbacks.count %> empresas já avaliaram esse profissional)</small>
            <% end %>
          </h3>

          <h6><%= t('activerecord.attributes.feedback.commitment_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_commitment_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_commitment_score %>%;">
              <%= @avg_commitment_score %>%
            </div>
          </div>

          <h6><%= t('activerecord.attributes.feedback.excellence_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_excellence_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_excellence_score %>%;">
              <%= @avg_excellence_score %>%
            </div>
          </div>

          <h6><%= t('activerecord.attributes.feedback.productivity_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_productivity_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_productivity_score %>%;">
              <%= @avg_productivity_score %>%
            </div>
          </div>

          <h6><%= t('activerecord.attributes.feedback.leadership_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_leadership_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_leadership_score %>%;">
              <%= @avg_leadership_score %>%
            </div>
          </div>

          <h6><%= t('activerecord.attributes.feedback.proactivity_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_proactivity_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_proactivity_score %>%;">
              <%= @avg_proactivity_score %>%
            </div>
          </div>

          <h6><%= t('activerecord.attributes.feedback.teamwork_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_teamwork_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_teamwork_score %>%;">
              <%= @avg_teamwork_score %>%
            </div>
          </div>

          <h6><%= t('activerecord.attributes.feedback.flexibility_score') %></h6>
          <div class="progress">
            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="<%= @avg_flexibility_score %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @avg_flexibility_score %>%;">
              <%= @avg_flexibility_score %>%
            </div>
          </div>
        </div>
      </div>

    <% end %>

    <hr class="lg">

    <div class="row">
      <div class="content col-md-12">
        <!-- Additional Info Tabs -->
        <div class="tabs">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1-1" data-toggle="tab">Detalhes</a></li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content">

            <div class="tab-pane fade in active" id="tab1-1">
              <div class="row">
                <div class="col-sm-6 col-md-6">
                  <h4>Informações Extras</h4>
                  <div class="list list__arrow2">
                    <ul>
                      <li>
                        <b><%= t('activerecord.attributes.feedback.contribution_to_sales') %>:</b> <%= number_to_currency(@contribution_to_sales_sum) %>
                      </li>
                    </ul>
                  </div>

                  <h4>Motivos de desligamentos</h4>
                  <div class="list list__arrow2">
                    <ul>
                      <% @termination_reasons_grouped.each do |termination_reason| %>
                        <li>
                          <b><%= t("activerecord.models.feedback.termination_reason.code#{termination_reason[0]}") %>:</b> <%= termination_reason[1] %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
            </div>
          </div>
        </div>
        <!-- Additional Info Tabs / End -->
      </div>
    </div>

  </div>
</section>
