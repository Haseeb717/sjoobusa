<head>
  <title>SJOOBS</title>
  <meta charset="utf-8">
  <meta name="description" content="SJOOBS">
  <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">
  <%= csrf_meta_tags %>

  <!-- Fonts -->
  <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic|Bitter:400,700,400italic" rel="stylesheet" type="text/css">

  <!-- CSS -->
  <%= stylesheet_link_tag    'application', media: 'all' %>

  <!-- JS -->
  <%= javascript_include_tag 'application' %>

  <link href="<%= image_path('favicons/favicon.ico') %>" rel="shortcut icon" type="image/vnd.microsoft.icon" />

  <script>
